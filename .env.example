# Environment Variables for Trails of Tears App
# Copy this file to .env and fill in the values

# ===== Flask Configuration =====
# Secret key for session management (generate a secure random string)
# In production, set this to a secure random value via Heroku config vars
SECRET_KEY=your-secret-key-here-change-this-in-production

# ===== Database Configuration =====
# For local development, sqlite is used by default if DATABASE_URL is not set
# For production (Heroku), set via: heroku config:set DATABASE_URL=postgres://...
DATABASE_URL=

# ===== React Configuration =====
# PUBLIC_URL: The base URL where the React app will be served
# Used by Create React App for asset paths (images, videos, etc.)
# In Dockerfile, this is set to your Heroku app domain
# For local development, you can leave this empty or set it to http://localhost:5000
PUBLIC_URL=https://trailsoftears-88ffdf9f4a82.herokuapp.com/

# ===== Flask Environment =====
# Set to 'production' on Heroku, 'development' for local dev
FLASK_ENV=development
SQLALCHEMY_ECHO=False
